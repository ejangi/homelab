# ==============================================================================
# .env File for Docker Compose Configuration
# ==============================================================================

# --- 1. Database Configuration (Shared by n8n and postgres) ---
POSTGRES_DB=n8n
POSTGRES_USER=n8n
# !! CRITICAL: Update this with a strong, secret password !!
POSTGRES_PASSWORD=insertpasswordhere
# Note: DB_TYPE, HOST, PORT are hardcoded in compose as they are static.
# DB_POSTGRES_HOST=postgres
# DB_POSTGRES_PORT=5432

# --- 2. n8n Security and Host Settings ---
# !! CRITICAL: Update the HOST and WEBHOOK_URL for your domain !!
N8N_HOST=something.something.ts.net
WEBHOOK_URL=https://${N8N_HOST}/

# !! CRITICAL: Update these with strong, secret credentials !!
N8N_BASIC_AUTH_USER=ejangi
N8N_BASIC_AUTH_PASSWORD=insertpasswordhere
N8N_ENCRYPTION_KEY=insertpasswordhere

# Static/Non-Secret Settings
N8N_PROTOCOL=https
GENERIC_TIMEZONE=Australia/Brisbane
TZ=Australia/Brisbane
N8N_LISTEN_ADDRESS=0.0.0.0
N8N_PATH=/n8n/
N8N_SECURE_COOKIE=true
N8N_BASIC_AUTH_ACTIVE=true

# --- 3. Networking Configuration ---
# You generally don't need to change these unless you have network conflicts
NETWORK_SUBNET=192.168.0.0/16
